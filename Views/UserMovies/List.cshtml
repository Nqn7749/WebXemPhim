@model List<WebXemPhim.Models.Movie>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    // Tự động nhận tiêu đề từ ViewBag (ví dụ: Phim Hành Động, Phim Bộ Mới...)
}

<style>
    /* 1. Thiết lập font Poppins và màu nền Midnight */
    body {
        background-color: #0f172a !important;
        font-family: 'Poppins', sans-serif;
    }

    /* 2. Tiêu đề mục chuyên mục */
    .section-title {
        font-weight: 800;
        letter-spacing: -0.5px;
        position: relative;
        padding-bottom: 15px;
        margin-bottom: 30px;
        color: #f8fafc;
        text-transform: uppercase;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 80px;
            height: 4px;
            background: #e50914;
            border-radius: 2px;
        }

    /* 3. Tận dụng CSS từ site.css đã tối ưu nhưng thêm vài nét riêng */
    .movie-grid-card {
        background-color: #1e293b;
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        border: 1px solid rgba(255, 255, 255, 0.03);
        height: 100%;
    }

        .movie-grid-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5), 0 0 20px rgba(229, 9, 20, 0.2);
            border-color: rgba(229, 9, 20, 0.4);
        }
</style>

<div class="container mt-5">
    <h2 class="section-title">
        <i class="fa-solid fa-clapperboard text-danger me-2"></i> @ViewBag.Title
    </h2>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var phim in Model)
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
                    <div class="movie-grid-card h-100">
                        <div class="movie-poster-wrapper" style="position: relative; overflow: hidden;">
                            <span class="movie-badge" style="position: absolute; top: 12px; left: 12px; background: #e50914; color: white; padding: 2px 10px; border-radius: 6px; font-size: 0.7rem; z-index: 5; font-weight: 700;">HD</span>

                            <img src="@phim.PosterUrl" class="card-img-top" alt="@phim.Title" style="height:320px; object-fit:cover; transition: transform 0.6s ease;">

                            <div class="movie-overlay d-flex align-items-center justify-content-center" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.4); opacity: 0; transition: 0.3s; z-index: 3;">
                                <div class="play-icon-circle" style="width: 55px; height: 55px; background: #e50914; border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 0 20px rgba(229, 9, 20, 0.5);">
                                    <i class="fa-solid fa-play text-white" style="font-size: 1.2rem; margin-left: 3px;"></i>
                                </div>
                            </div>
                        </div>

                        <div class="p-2 text-center">
                            <a href="@Url.Action("Detail", "UserMovies", new { id = phim.MovieId })" class="movie-title text-decoration-none text-white fw-bold d-block mb-1" style="font-size: 0.9rem; min-height: 2.6rem; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                @phim.Title
                            </a>

                            <div class="d-flex justify-content-between px-2 mb-2">
                                <small class="text-muted" style="font-size: 0.75rem;">
                                    <i class="fa-regular fa-calendar me-1"></i> @Html.Raw(phim.ReleaseYear != null ? phim.ReleaseYear.ToString() : "&nbsp;")
                                </small>
                                <small class="text-muted" style="font-size: 0.75rem;">
                                    <i class="fa-solid fa-earth-asia me-1"></i> @Html.Raw(!string.IsNullOrWhiteSpace(phim.Country) ? phim.Country : "&nbsp;")
                                </small>
                            </div>

                            <a href="@Url.Action("Detail", "UserMovies", new { id = phim.MovieId })" class="btn btn-danger btn-sm w-100 mt-1 rounded-pill fw-bold py-2 shadow-sm" style="font-size: 0.75rem; letter-spacing: 0.5px;">
                                XEM NGAY
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-5">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == (int)ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action(
                                ViewContext.RouteData.Values["action"].ToString(),
                                "UserMovies",
                                new { page = i, id = ViewContext.RouteData.Values["id"] })">@i</a>
                            </li>
                        }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fa-solid fa-box-open fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Chưa có phim nào trong danh mục này</h4>
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-danger rounded-pill mt-3 px-4">Quay lại trang chủ</a>
        </div>
    }
</div>