@model List<WebXemPhim.Models.Movie>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-warning">@ViewBag.Title</h2>

    <div class="row">
        @foreach (var phim in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm bg-dark text-light">
                    <img src="@phim.PosterUrl" class="card-img-top" alt="@phim.Title"
                         style="height:300px;object-fit:cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@phim.Title (@phim.ReleaseYear)</h5>
                        <p class="card-text text-muted">@phim.Country</p>
                        <a href="@Url.Action("Detail", "UserMovies", new { id = phim.MovieId })"
                           class="btn btn-sm btn-danger">▶ Xem ngay</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Phân trang -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action(
                        ViewContext.RouteData.Values["action"].ToString(),
                        "UserMovies",
                        new { page = i, id = ViewContext.RouteData.Values["id"] })">@i</a>
                    </li>
                }
        </ul>
    </nav>
</div>
