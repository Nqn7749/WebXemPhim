@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5" style="max-width: 500px;">
    <h3 class="text-center mb-4">📝 Đăng ký tài khoản</h3>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <div class="form-group mb-3">
            <label>Họ tên</label>
            @Html.TextBox("fullName", null, new { @class = "form-control", placeholder = "Nhập họ tên" })
        </div>
        <div class="form-group mb-3">
            <label>Email</label>
            @Html.TextBox("email", null, new { @class = "form-control", placeholder = "Nhập email" })
        </div>
        <div class="form-group mb-3">
            <label>Mật khẩu</label>
            @Html.Password("password", new { @class = "form-control", placeholder = "Nhập mật khẩu" })
        </div>
        <button type="submit" class="btn btn-success w-100">Đăng ký</button>
    }
</div>
