@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* 1. Thiết lập màu nền riêng cho trang Login để đồng bộ Midnight Blue */
    body {
        background-color: #0f172a !important; /* Màu xanh Midnight */
    }

    /* 2. Khung đăng nhập (Card trắng) */
    .auth-container {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Poppins', sans-serif;
    }

    .auth-card {
        background: #ffffff;
        width: 100%;
        max-width: 420px;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
        text-align: center;
    }

        /* 3. QUAN TRỌNG: Sửa lỗi chữ tàng hình - Ép chữ màu đen */
        .auth-card .form-control {
            background-color: #f8fafc !important; /* Nền trắng xám nhẹ */
            color: #1e293b !important; /* CHỮ NHẬP VÀO MÀU ĐEN ĐẬM */
            border: 1px solid #cbd5e1 !important;
            border-radius: 10px !important;
            padding: 12px 15px;
            font-size: 0.95rem;
        }

            .auth-card .form-control:focus {
                border-color: #e50914 !important;
                box-shadow: 0 0 0 3px rgba(229, 9, 20, 0.1) !important;
                background-color: #ffffff !important;
            }

    /* 4. Các thành phần khác */
    .auth-icon {
        font-size: 3.5rem;
        color: #e50914;
        margin-bottom: 15px;
    }

    .auth-title {
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 10px;
        letter-spacing: -0.5px;
    }

    .input-group-text {
        background: #f8fafc !important;
        border-color: #cbd5e1 !important;
        color: #64748b !important;
        border-radius: 10px 0 0 10px !important;
    }

    .border-start-0 {
        border-radius: 0 10px 10px 0 !important;
    }

    .btn-login {
        background-color: #e50914 !important;
        border: none !important;
        color: white !important;
        font-weight: 600;
        padding: 12px;
        border-radius: 30px !important;
        margin-top: 10px;
        transition: all 0.3s ease;
    }

        .btn-login:hover {
            background-color: #b20710 !important;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(229, 9, 20, 0.3);
        }
</style>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-icon">
            <i class="fa-solid fa-circle-user"></i>
        </div>

        <h3 class="auth-title text-uppercase">Đăng nhập</h3>
        <p class="text-muted small mb-4">Khám phá thế giới phim cùng MOVIEPRO</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger py-2 small border-0 mb-4">
                <i class="fa-solid fa-circle-exclamation me-2"></i> @ViewBag.Error
            </div>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "text-start" }))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label small fw-bold text-dark">Email</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-envelope"></i>
                    </span>
                    <input type="email" name="email" class="form-control border-start-0"
                           placeholder="Nhập email của bạn" required>
                </div>
            </div>

            <div class="mb-2">
                <div class="d-flex justify-content-between">
                    <label class="form-label small fw-bold text-dark">Mật khẩu</label>
                    <a href="#" class="text-danger text-decoration-none small">Quên?</a>
                </div>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-lock"></i>
                    </span>
                    <input type="password" name="password" class="form-control border-start-0"
                           placeholder="••••••••" required>
                </div>
            </div>

            <button type="submit" class="btn btn-login w-100 mt-4">
                ĐĂNG NHẬP NGAY
            </button>

            <div class="mt-4 text-center">
                <span class="text-muted small">Chưa có tài khoản?</span>
                <a href="@Url.Action("Register", "Account")" class="text-danger fw-bold text-decoration-none small ms-1">Đăng ký</a>
            </div>
        }
    </div>
</div>